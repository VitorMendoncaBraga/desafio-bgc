{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "target": "ES2022", 
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./", 
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    ".serverless",
    ".build"
  ]
}